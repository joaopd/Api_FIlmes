  "version": "0.2.0",
  "configurations": [
    {
      "name": ".NET Core Launch (web)",
      "type": "coreclr",
      "request": "launch",
      "preLaunchTask": "build",
      "program": "${workspaceFolder}/Api.Application/bin/Debug/netcoreapp3.1/Application.dll",
      "args": [],
      "cwd": "${workspaceFolder}/Api.Application",
      "stopAtEntry": false,
      "serverReadyAction": {
        "action": "openExternally",
        "pattern": "\\bNow listening on:\\s+(https?://\\S+)"
      },
      "env": {
        "ASPNETCORE_ENVIRONMENT": "Development",
        "DB_CONNECTION":"Server=(localdb)\\MSSQLLocalDB;Initial catalog=dbAPI1;MultipleActiveResultSets=true;User ID=adm;pwd=112233",
        "DATABASE" : "SQLSERVER",
        "MIGRATION": "APLICAR"

      },
      "sourceFileMap": {
        "/Views": "${workspaceFolder}/Views"
      }
    },
    {
      "name": ".NET Core Attach",
      "type": "coreclr",
      "request": "attach",
      "processId": "${command:pickProcess}"
    }
  ]
}
